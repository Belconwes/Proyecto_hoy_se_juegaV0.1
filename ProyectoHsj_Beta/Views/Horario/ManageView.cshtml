@model IEnumerable<ProyectoHsj_Beta.Models.HorarioDisponible>

@{
    
    ViewData["Title"] = "Horarios Disponibles";
    Layout = "~/Views/Shared/Layout_admin.cshtml";
}

<h1 style="color:bisque">
    Hi this is Manage View for reservas jijij
</h1>

<!-- Cuadro (card) para contener los horarios -->
<div class="card shadow-lg mx-auto mt-4" style="max-width: 800px;">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Lista de Horarios</h5>
    </div>
    <!-- Mensaje de éxito o error -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="card-body">
        <!-- Formulario de búsqueda -->
        <div class="card-body">
            <form asp-action="Search" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fecha">Fecha:</label>
                        <input type="date" id="fecha" name="fecha" class="form-control" />
                    </div>
                    <div class="col-md-5">
                        <label for="horaInicio">Hora Inicio:</label>
                        <input type="time" id="horaInicio" name="horaInicio" class="form-control" />
                    </div>
                    <div class="col-md-2 align-self-end">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </form>
        <!-- Botón para eliminar todos los horarios -->
        <form asp-action="EliminarTodosLosHorarios" method="post" class="mb-3">
            <button type="submit" class="btn btn-danger">Eliminar Todos los Horarios</button>
        </form>

        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No hay horarios disponibles.
            </div>
        }
        else
        {
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Hora Inicio</th>
                        <th>Hora Fin</th>
                        <th>Acciones</th>
                        <th>Disponibilidad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var horario in Model)
                    {
                        <tr>
                            <td>@horario.FechaHorario.ToShortDateString()</td>
                            <td>@horario.HoraInicio</td>
                            <td>@horario.HoraFin</td>
                            <td>
                                @if (horario.DisponibleHorario == true)
                                {
                                    <span class="badge bg-success">Disponible</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No Disponible</span>
                                }
                            </td>
                            <td>
                                <form asp-action="EliminarHorario" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@horario.IdHorarioDisponible" />
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                                <a asp-for ="" asp-action="EditarHorario" asp-route-id="@horario.IdHorarioDisponible" class="btn btn-warning btn-sm">
                                    Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("GenerarFechasYHorariosDelMes", "Horario")'">
    Generar Horarios del Mes
</button>
