@model ProyectoHsj_Beta.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
    Layout = "~/Views/Shared/Layout_admin.cshtml";
}

<h1 class="mb-4"></h1>

<div class="card shadow-lg p-4" style="background-color: #f8f9fa; border-radius: 15px;">
    <h4 class="card-title mb-4 text-dark">Información del Usuario</h4>
    <hr />
    <div class="row text-dark">
        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-user fa-lg mr-3 text-black"></i><strong>Nombre:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.NombreUsuario)
        </div>

        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-user fa-lg mr-3 text-black"></i><strong>Apellido:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.ApellidoUsuario)
        </div>

        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-envelope fa-lg mr-3 text-black"></i><strong>Correo Electrónico:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.CorreoUsuario)
        </div>

        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-lock fa-lg mr-3 text-black"></i><strong>Contraseña:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.ContraseniaUsuario)
        </div>

        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-phone fa-lg mr-3 text-black"></i><strong>Teléfono:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.TelefonoUsuario)
        </div>

        <div class="col-sm-4 border-bottom py-2">
            <i class="fas fa-user-tag fa-lg mr-3 text-black"></i><strong>Rol:</strong>
        </div>
        <div class="col-sm-8 border-bottom py-2">
            @Html.DisplayFor(model => model.IdRolNavigation.IdRol)
        </div>
    </div>
</div>

<div class="form-group d-flex justify-content-between mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-primary btn-lg">
        <i class="fas fa-edit mr-2"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="fas fa-list mr-2"></i> Volver a la lista
    </a>
</div>

<!-- Estilos adicionales -->
<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url('/css/img/logo fondo admin.png');
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        background-color: #000; /* Color de fondo negro */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .border-bottom {
        border-bottom: 1px solid #dee2e6;
    }

    .mr-3 {
        margin-right: 1rem;
    }
</style></div>
