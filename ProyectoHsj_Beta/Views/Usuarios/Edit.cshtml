@model ProyectoHsj_Beta.ViewsModels.UsuarioEditViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/Layout_admin.cshtml";
}
    <h1>Editar Usuario</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="IdUsuario" />

                <div class="form-group">
                    <label asp-for="NombreUsuario" class="control-label">Nombre</label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ApellidoUsuario" class="control-label">Apellido</label>
                    <input asp-for="ApellidoUsuario" class="form-control" />
                    <span asp-validation-for="ApellidoUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CorreoUsuario" class="control-label">Correo</label>
                    <input asp-for="CorreoUsuario" class="form-control" />
                    <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TelefonoUsuario" class="control-label">Teléfono</label>
                    <input asp-for="TelefonoUsuario" class="form-control" />
                    <span asp-validation-for="TelefonoUsuario" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdRol" class="control-label">Rol</label>
                    <select asp-for="IdRol" asp-items="Model.Roles" class="form-control"></select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>




